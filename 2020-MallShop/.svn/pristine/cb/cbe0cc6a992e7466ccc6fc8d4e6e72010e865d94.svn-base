<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/ivEdit"
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_address_name"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/contentTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="#F5E8E8"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:text="@string/add_address_normal"
                    android:textColor="@color/mainColor"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxEms="20"
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_address_location"
                    android:textColor="@color/thirdTextColor"
                    android:textSize="@dimen/middleContentTextSize" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:padding="10dp"
            android:layout_marginEnd="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit" />
    </RelativeLayout>
</LinearLayout>
