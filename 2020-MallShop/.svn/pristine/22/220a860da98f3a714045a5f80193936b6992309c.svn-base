<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/shape_bg_white_radius8"
    android:layout_width="270dp"
    android:layout_height="169dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/mainTextColor"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_pick_up_code"
            android:textSize="@dimen/contentTextSize" />
        <ImageView
            android:id="@+id/ivDialogClose"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="3dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:background="@drawable/shape_bg_gray_radius2"
            android:textColor="@color/mainTextColor"
            android:id="@+id/etDialogContent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="34sp" />
        <TextView
            android:layout_margin="3dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:background="@drawable/shape_bg_gray_radius2"
            android:textColor="@color/mainTextColor"
            android:id="@+id/etDialogContent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="34sp" />
        <TextView
            android:layout_margin="3dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:background="@drawable/shape_bg_gray_radius2"
            android:textColor="@color/mainTextColor"
            android:id="@+id/etDialogContent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="34sp" />
        <TextView
            android:layout_margin="3dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:background="@drawable/shape_bg_gray_radius2"
            android:textColor="@color/mainTextColor"
            android:id="@+id/etDialogContent4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="34sp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:text="@string/receiving_the_goods"
        android:gravity="center"
        style="@style/MyTextView"
        android:textSize="@dimen/secondaryContentTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>