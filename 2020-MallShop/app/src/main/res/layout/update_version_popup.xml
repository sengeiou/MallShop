<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_update_version"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/shape_update_title"
        android:paddingLeft="12dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/update_logo"
            />
        <TextView
            android:id="@+id/titleVersion"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="[1.1.1]新版本上线拉！"
            android:textSize="@dimen/navigationTextSize"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/text_size_13"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:text="新增功能："/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_above="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcUpdateContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </ScrollView>
        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/updateCancel"
                android:layout_width="109dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="20dp"
                android:layout_height="32dp"
                android:text="暂不更新"
                android:gravity="center"
                android:background="@drawable/update_text_bg"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/update_cancel_popup"
                />
            <Button
                android:id="@+id/updateConfirm"
                android:layout_width="109dp"
                android:layout_marginRight="30dp"
                android:layout_height="32dp"
                android:background="@drawable/update_version_confirm"
                android:text="@string/update_immediately"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>