<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottomColor"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/versionImage"
            android:layout_marginTop="20dp"
            android:src="@mipmap/update_app"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:text="@string/app_name"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:text="@string/version_app"
            android:gravity="center"
            />

      <LinearLayout
          android:layout_marginTop="31dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/tv_product"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_height="48dp">
        <TextView
            android:text="@string/product_detail"
            android:textColor="#333333"
            android:textSize="@dimen/contentTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableEnd="@mipmap/arrow_right"
            android:drawablePadding="13dp"
            android:id="@+id/tv_ind"
            android:layout_alignParentEnd="true"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            style="@style/View_line"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentBottom="true"
            />
    <RelativeLayout
        android:id="@+id/tv_Update"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_height="48dp">
        <TextView
            android:text="@string/version_update"
            android:textColor="#333333"
            android:textSize="@dimen/contentTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableEnd="@mipmap/arrow_right"
            android:drawablePadding="13dp"
            android:id="@+id/update"
            android:layout_alignParentEnd="true"
            android:textColor="#333333"
            android:textSize="@dimen/contentTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
          <View
              style="@style/View_line"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="24dp"
              android:layout_alignParentBottom="true"
              />
          <RelativeLayout
              android:id="@+id/tv_servicePhone"
              android:gravity="center_vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:paddingLeft="24dp"
              android:paddingRight="24dp"
              android:layout_height="48dp">
              <TextView
                  android:text="@string/service_phone"
                  android:textColor="#333333"
                  android:textSize="@dimen/contentTextSize"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:drawablePadding="13dp"
                  android:id="@+id/phoneNum"
                  android:layout_alignParentEnd="true"
                  android:textColor="#3388FF"
                  android:text="0755-89746500"
                  android:textSize="@dimen/contentTextSize"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </RelativeLayout>
      </LinearLayout>
    </LinearLayout>
        <View
            style="@style/View_line"
            android:layout_alignParentBottom="true"
             />
</LinearLayout>
