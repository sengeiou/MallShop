<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_bg_white_half_radius17_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:maxEms="20"
        android:textSize="@dimen/text_size_16"
        android:text="当前暂未开启位置服务，暂无法获得准确定位"
        style="@style/MyTextView" />
    <LinearLayout
        android:layout_marginBottom="59dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="15dp"
            android:id="@+id/tvCancel"
            android:textColor="@color/green_04c160"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/shape_bg_btn_gray"
            android:layout_width="108dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/tvOpen"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"
            android:text="去开启"
            android:background="@drawable/shape_bg_btn_green"
            android:layout_width="108dp"
            android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>
